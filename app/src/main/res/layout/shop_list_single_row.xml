<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/deleteShopBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/delete_text"
            android:textSize="10sp"
            android:focusable="false"
            tools:background="@color/colorAccent" />

        <Button
            android:id="@+id/editShopBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/deleteShopBtn"
            android:text="@string/edit_text"
            android:textSize="8sp"
            android:focusable="false"
            tools:outlineAmbientShadowColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textViewSingle"
            android:layout_width="256dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"

            android:layout_toStartOf="@+id/editShopBtn" />

    </RelativeLayout>

</LinearLayout>